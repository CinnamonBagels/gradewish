<div class="container-fluid">
	<div class="row" id="title">
		<div class=" text-center col-lg-12 col-md-12 col-sm-12">
			<span class="title">Gradewish</span>
		</div>
	</div>
	<div class="row">
		<div class="row">
			<div class="col-lg-offset-2 col-lg-8 col-md-8 col-sm-8">
				<a class="btn btn-primary btn-block" data-toggle="modal" data-target="#loginModal">Login</a>
			</div>
		</div>
		<div class="row ">
			<div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-2 col-lg-8 col-md-8 col-sm-8">
				<a class="btn btn-primary btn-block" data-toggle="modal" data-target="#registerModal">Register</a>
			</div>
		</div>
	</div>

	<!-- Modal -->
	<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="register" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title" id="register">Register</h4>
	      </div>
	      <div class="modal-body">
	        <form id="register-form" action="/register" method="post">
	          <div class="row fullWidth">
	          	<div class="row ">
	          		<div class=" col-lg-10 col-sm-10 col-md-10 ">
	          			<input type="text" placeholder="Name" name="name">
	          		</div>
	          	</div>
	          	<div class="row ">
	          		<div class=" col-lg-10 col-sm-10 col-md-10 ">
	          			<input type="text" placeholder="E-mail" name="email">
	          		</div>
	          	</div>
	          	<div class="row ">
	          		<div class=" col-lg-10 col-sm-10 col-md-10 ">
	          			<input type="password" placeholder="Password" name="password">
	          		</div>
	          	</div>
	          	<div class="row ">
	          		<div class=" col-lg-10 col-sm-10 col-md-10 ">
	          			<input id="registerEnter" type="password" placeholder="Re-enter Password" name="verifypassword">
	          		</div>
	          	</div>
	          	<div class="row ">
	          		<div class=" col-lg-10 col-sm-10 col-md-10 ">
	          			<a id="register-button" class="btn btn-primary btn-lg">Register</a>
	          		</div>
	          	</div>
	          </div>
	        </form>
	      </div>
	      <div class="modal-footer">
	        <a href="">Register</a>
	        <a href="">Back</a>
	      </div>
	    </div>
	  </div>
	</div>

	<!-- Modal -->
	<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="login" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title" id="login">Login</h4>
	      </div>
	      <div class="modal-body">
	      	<form id="login-form" action="/login" method="post">
	      	  <div class="row">
	      	  	<div class="row ">
	      	  		<div class=" col-lg-10 col-sm-10 col-md-10 ">
	      	  			<input type="text" placeholder="e-mail" name="email">
	      	  		</div>
	      	  	</div>
	      	  	<div class="row ">
	      	  		<div class=" col-lg-10 col-sm-10 col-md-10 ">
	      	  			<input id="loginEnter" type="password" placeholder="password" name="password">
	      	  		</div>
	      	  	</div>
	      	  	<div class="row ">
	      	  		<div class=" col-lg-10 col-sm-10 col-md-10 ">
	      	  			<a id="login-button" class="btn btn-primary btn-lg">Login</a>
	      	  		</div>
	      	  	</div>
	      	  </div>
	      	</form>
	      </div>
	      <div class="modal-footer">
	        <a href="">Login</a>
	        <a href="">Back</a>
	      </div>
	    </div>
	  </div>
	</div>

	<script>
		$('#login-button').on('click', function(event) {
			$('#login-form').submit();
		});

		$('#register-button').on('click', function(event) {
			$('#register-form').submit();
		});

		$('#reenterpassword').bind('enterKey', function(event) {
			$('#register-form').submit();
		});

		$('#loginEnter').bind('enterKey', function(event) {
			$('#login-form').submit();
		});

		$('#reenterpassword, #loginEnter').keyup(function(e){
		    if(e.keyCode == 13)
		    {
		        $(this).trigger("enterKey");
		    }
		});
	</script>
</div>