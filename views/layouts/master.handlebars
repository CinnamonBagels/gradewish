	<link rel="stylesheet" href="/css/bootstrap.min.css">
	<link rel="stylesheet" href="/css/app.css">
	<link href='http://fonts.googleapis.com/css?family=Shadows+Into+Light' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Indie+Flower' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>

	<script src="/js/jquery.js"></script>

	<meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
	{{!-- {{#if session}} --}}
	<div class="container-fluid">
		{{#if session}}
		<nav class="navbar navbar-inverse navbar-fixed-top">
		  <div class="container-fluid">
		      <!-- Brand and toggle get grouped for better mobile display -->
		      <div class="navbar-header">
		        <a class="navbar-brand" href="/classes">Classes</a>
		      </div>

		      <!-- Collect the nav links, forms, and other content for toggling -->
		        <ul class="nav navbar-nav navbar-right">
		          {{!-- <li class="dropdown">
		            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Classes<span class="caret"></span></a>
		            <ul class="dropdown-menu" role="menu">
		              {{#each session.sessionClasses}}
		              	<li>
		              		<a href="/classes/{{className}}" title={{className}}>{{className}}</a>
		              	</li>
		              {{/each}}
		            </ul>
		          </li> --}}
		          <li>
		          	<a data-toggle="modal" data-target="#logoutModal">Logout</a>
		          </li>
		        </ul>
		    </div><!-- /.container-fluid -->
		</nav>
		{{/if}}
		{{{body}}}
	</div>

	<!-- Modal -->
	<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title" id="myModalLabel">Logout</h4>
	      </div>
	      <div class="modal-body">
	        Are you sure you want to logout?
	      </div>
	      <div class="modal-footer">
	        <a href="/logout" id="confirmLogout" class="btn btn-primary">Logout</a>
	        <a class="btn btn-primary" data-dismiss="modal" aria-label="Close">Cancel</a>
	      </div>
	    </div>
	  </div>
	</div>
	
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/alertify.js"></script>
	<!-- <script src="/js/modernizr.js"></script> -->
	<!--<script src="/js/foundation.min.js"></script> -->
	<script>

	(function() {
	  $(function() {
	  	$("body").click(function(event){
		if ($("nav.sidebar").hasClass("sidebar-menu-expanded")) {
	        collapseMyMenu();
	        hideMenuTexts();
	        $("#justify-icon").css({
	          color: "#FFF"});
	    	}
		})
	    var collapseMyMenu, expandMyMenu, hideMenuTexts, showMenuTexts;
	    expandMyMenu = function() {
	      return $("nav.sidebar").removeClass("sidebar-menu-collapsed").addClass("sidebar-menu-expanded");
	    };
	    collapseMyMenu = function() {
	      return $("nav.sidebar").removeClass("sidebar-menu-expanded").addClass("sidebar-menu-collapsed");
	    };
	    showMenuTexts = function() {
	      return $("nav.sidebar ul a span.expanded-element, nav.sidebar a span.expanded-element").show();
	    };
	    hideMenuTexts = function() {
	      return $("nav.sidebar ul a span.expanded-element, nav.sidebar a span.expanded-element").hide();
	    };
	    return $("#justify-icon").click(function(e) {
	      if ($(this).parent("nav.sidebar").hasClass("sidebar-menu-collapsed")) {
	        expandMyMenu();
	        showMenuTexts();
	        $(this).css({
	          color: "#000"
	        });
	      } else if ($(this).parent("nav.sidebar").hasClass("sidebar-menu-expanded")) {
	        collapseMyMenu();
	        hideMenuTexts();
	        $(this).css({
	          color: "#FFF"
	        });
	      }
	      return false;
	    });
	  });

	}).call(this);
	</script>
</body>
</html>